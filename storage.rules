rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Feed items - users can upload to their own folder and read from partner's folder
    match /feed/{userId}/{fileName} {
      // Allow users to upload files to their own folder
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to read files from their own folder or their partner's folder
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        // Check if the requester has partnerId equal to this userId
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.partnerId == userId
      );
    }
    
    // Profile photos - users can upload and read their own profile photos
    match /profile-photos/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // General files - users can upload to their own folder
    match /files/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
